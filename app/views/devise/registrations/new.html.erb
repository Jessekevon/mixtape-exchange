<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-6 small-centered columns">
      <div>
        <%= f.text_field :name, :placeholder => "name" %></div>
    </div>
  </div>

  <div class="row">
    <div class="small-6 small-centered columns">
      <div>
      <%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>
    </div>
  </div>

  <div class="row">
    <div class="small-6 small-centered columns">
      <div>
      <%= f.password_field :password, :placeholder => "password" %></div>
    </div>
  </div>

  <div class="row">
    <div class="small-6 small-centered columns">
      <div>
      <%= f.password_field :password_confirmation, :placeholder => "password confirmation" %></div>
    </div>
  </div>

  <div class="row">
    <div class="small-6 small-centered columns">
      <div class='center'><%= f.submit "Sign up", :class => 'button' %></div>
    <% end %>
  </div>
</div>
