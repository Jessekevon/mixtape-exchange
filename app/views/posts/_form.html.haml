= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .row-container
    .row
      .small-3.small-centered.columns
        = f.text_field :title, :placeholder => "Title" 
    .row
      .small-3.small-centered.columns
        = f.text_area :content, :placeholder => "Content"
    .row
      .small-3.small-centered.columns
        = f.text_field :embed_url, :placeholder => "Embed url"
    .row
      .small-3.small-centered.columns
        = f.text_field :tag_list, { :placeholder => "Tags separated by commas" }
    .row
      .small-3.small-centered.columns
        = f.label :post_img
        = f.file_field :post_img, :value => 'covers/cover1.jpeg'
    .row
      .small-3.small-centered.columns
        = f.submit 'Save'

