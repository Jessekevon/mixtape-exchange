%p#notice= notice

%h1.large= @post.title
%p 
	Author: 
	= link_to @post.user.name, user_url(@post.user_id)
%p
	Tags:
	- @post.tag_list.each do |x|
		= x
%div.row
	%p.columns.large-6= image_tag @post.post_img
	%p.columns.large-6= @post.content
%p= @post.embed_url.html_safe


%p
	= link_to 'Edit', edit_post_path(@post)
	\|
	= link_to 'Destroy', post_path(@post), :method => :delete, :data => { :confirm => 'Are you sure?' }
	\|
	= link_to 'Back', posts_path



= commontator_thread(@post)


